<% @user.contracts.each do |contract| %>
<div class="background">
   <div class="padded">
     <div class="about-card-content-title upcase">
      <div class="text-center">

        <h1><strong><%= contract.company_name %></strong></h1>
      </div>
    </div>
  </div>
  <div class="prof-about-card-content">
    <div class="container">
      <div class="about-card">
        <div class="about-slice">
            <div class="prof-line"></div>
              <div class="about-card-content-container">
                <div class="about-card-content-title upcase">
                  <div class="img-profil">
                    <%= image_tag "edit.png" %>
                  </div>
                  <h2>Récapitulatif des informations de la société et la levée de fonds</h2>
                </div>
                <div class="content-info">
                  <ul>
                    <li><strong>Nom de la société : </strong> <%= contract.company_name%></li>
                    <li><strong>Statut de la société :</strong> <%=contract.company_status%></li>
                    <li><strong>Adresse du siège : </strong><%=contract.headquarters_address%></li>
                    <li><strong>Capital social : </strong><%=contract.share_capital%></li>
                    <li><strong>Numéro RCS :</strong> <%=contract.rcs_number%></li>
                    <li><strong>Ville RCS : </strong><%=contract.rcs_city%></li>
                    <li><strong>Date de création :</strong> <%=contract.company_created_on%></li>
                    <li><strong>Objet social :</strong> <%=contract.company_object%></li>
                    <li><strong>Montant de la levée : </strong><%=contract.amount_to_be_raised%></li>
                    <li><strong>Engagement(s) particulier(s) :</strong> <%=contract.specific_engagment%></li>
                    <li><strong>Droits des investisseurs : </strong><%=contract.investisors_right%></li>
                    <li><strong>Juridiction en charge :</strong> <%=contract.juridiction_law%></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
    <div class="container">
      <div class="about-card">
        <div class="about-slice">
          <div class="prof-line"></div>
            <div class="about-card-content-container">
              <div class="about-card-content-title upcase">
                <h2>Récapitulatif des informations des associés
                    <div class="img-profil">
                    <%= image_tag "edit.png" %>
                  </div>
                </h2>
              </div>
                  <ul>
                    <% contract.partners.each_with_index do |partner, index| %>
                      <li><strong>Associé(e) <%= index + 1 %> : <%= partner.first_name %> <%= partner.last_name %></strong></li>
                       <li><strong>Email </strong> : <%=partner.email%></li>
                    <li><strong>Téléphone </strong> : <%=partner.phone%></li>
                    <li><strong>Addresse : </strong> :<%=partner.address%></li>
                    <li><strong>Né(e) le </strong> :<%=partner.birth_date%> à <%=partner.birth_location%></li>
                    <li><strong>Nationalité</strong> :<%=partner.nationality%></li>
                    <li><strong>Participation au CCA </strong> : <%=partner.founders_receivables%></li>
                    <% end %>
                  </ul>
            </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="about-card">
        <div class="about-slice">
          <div class="prof-line"></div>
            <div class="about-card-content-container">
              <div class="about-card-content-title upcase">
                <h2>Récapitulatif des informations des investisseurs</h2>
                <div class="img-profil">
                    <%= image_tag "edit.png" %>
                  </div>
              </div>
                  <div class="content-info">
                    <ul>
                      <% contract.investors.each_with_index do |investor, index| %>
                        <li><strong>Investisseur: <%= index + 1 %> : <%= investor.first_name %> <%= investor.last_name %> </li></strong>
                        <li><strong>Adresse Mail</strong> : <%=investor.email%></li>
                         <div class="img-profil-send">
                          <%= image_tag "send.png" %>
                        </div>
                        <li><strong>Nationalité</strong> : <%=investor.nationality%></li>
                        <li><strong>Adresse</strong> : <%=investor.address%></li>
                        <li><strong>Montant investi</strong> : <%=investor.amount_raised%></li>
                        <li><strong>Né(e) le</strong> : <%=investor.birthdate%> à <%=investor.birthplace%> </li>
                        <li><strong>Valorisation cap </strong> : <%=investor.valo_floor%></li>
                        <li><strong>Valorisation floor </strong> : <%=investor.valo_cap%></li>
                        <li><strong>Décote </strong> :<%=investor.rate_drop%></li>
                      <% end %>
                    </ul>
                  </div>
            </div>
          </div>
      </div>
    </div>
  </div>


    <div class="text-center padded upcase">
      <%= link_to "Contrat", generate_contract_signature_contract_path(contract), method: :post, class: "btn btn-primary" %>

      <% if contract.state == 'pending' %>
          <%= link_to 'Acheter', new_contract_payment_path(contract), class: 'btn btn-primary' %>
        <% else %>
          <%= link_to 'Télécharger le contrat', contract_path(contract), class: 'btn btn-primary' %>
        <% end %>
    </div>
     <% end %>


  <div class="header_menu">
    <ul class="header_menu horizontal_list">
      <li><a class="no_border purple" href="#">Profile</a></li>
      <li><a href="#">Contrats</a></li>
      <li><a href="#">Modifier</a></li>
      <li><a href="#">Générer un nouveau contrat</a></li>
    </ul>
  </div>


</div>

